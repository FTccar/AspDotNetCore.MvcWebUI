@model Abc.Northwind.MvcWebUI.Models.CategoryListViewModel

@foreach (var category in Model.Categories)
{

    var css = "list-group-item";
    if(category.CategoryId == Model.CurrentCategory)
    {
        css += " active";
    }
    <a class="@css" href="/product/index?categoryId=@category.CategoryId">@category.CategoryName</a>

}